<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TransportActivity">


    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9e5b5f"
        android:padding="3dp"
        android:text="Transport details">


        <RelativeLayout
            android:id="@+id/upper"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#fffaffff">

            <TextView
                android:id="@+id/Transportation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:text="Other Facilities"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="#ff74b3e8"
                android:textSize="25sp" />

            <TextView
                android:id="@+id/medtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Transportation"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:autoText="false"
                android:background="#fffff7f1"
                android:shadowColor="#ffffbe36"
                android:singleLine="false"
                android:text="Along with the essential infrastructures the college also provides :"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffb103" />

            <TextView
                android:id="@+id/medtxt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/medtxt"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="31dp"
                android:autoText="false"
                android:background="#fffff7f1"
                android:shadowColor="#ffffbe36"
                android:singleLine="false"
                android:text="Medical Facility"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffb103" />


            <TextView
                android:id="@+id/medtxt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/medtxt1"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="7dp"
                android:shadowColor="#ffffbe36"
                android:singleLine="false"
                android:text="Free Medical Facilitis are provided to each student of the college by fulltime medical officer"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff555b8a" />

            <TextView
                android:id="@+id/medtxt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/medtxt2"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="7dp"
                android:autoText="false"
                android:background="#fffff7f1"
                android:shadowColor="#ffffbe36"
                android:singleLine="false"
                android:text="Bank"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffb103" />


            <TextView
                android:id="@+id/medtxt4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/medtxt3"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="7dp"
                android:shadowColor="#ffffbe36"
                android:singleLine="false"
                android:text="Full branch and ATM of Punjab National Bank(PNB) and Bank Of Baroda(BOB) facility exists in campus"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff555b8a" />


            <TextView
                android:id="@+id/medtxt5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/medtxt4"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="7dp"
                android:autoText="false"
                android:background="#fffff7f1"
                android:shadowColor="#ffffbe36"
                android:singleLine="false"
                android:text="Post Office"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffb103" />


            <TextView
                android:id="@+id/medtxt6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/medtxt5"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="7dp"
                android:shadowColor="#ffffbe36"
                android:singleLine="false"
                android:text="Institute has an exclusive Post Office which is located at the main gate of the Institute."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff555b8a" />

            <TextView
                android:id="@+id/medtxt7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/medtxt6"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="7dp"
                android:autoText="false"
                android:background="#fffff7f1"
                android:shadowColor="#ffffbe36"
                android:singleLine="false"
                android:text="CSA hall"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ffffb103" />


            <TextView
                android:id="@+id/medtxt8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/medtxt7"
                android:layout_marginLeft="22dp"
                android:layout_marginTop="7dp"
                android:shadowColor="#ffffbe36"
                android:singleLine="false"
                android:text="Council Of Student activities (CSA) hall conducts various events all around the year by students for students."
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#ff555b8a" />
        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
